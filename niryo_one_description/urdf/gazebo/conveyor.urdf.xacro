    <joint name="world_conveyor_joint" type="fixed">
        <origin xyz="${-conveyor_length-0.2} 0.15 ${conveyor_heigh_world}" rpy="0.0 0.0 0.0"/>
        <parent link="world" />
        <child link="conveyor_link_1" />
        <axis xyz="${-conveyor_length-0.2} 0.15 ${conveyor_heigh_world}" />
        <limit effort="10000" lower="${-conveyor_length+conveyor_width/2}" upper="${conveyor_length-conveyor_width/2}" velocity="1000" />
        <!--<dynamics damping="100.0" />-->
    </joint>
    

    <joint name="box_conveyor_joint_1_1" type="prismatic">
        <origin xyz="${box_length/2} ${box_width/2} ${box_height/2}" rpy="0.0 0.0 0.0"/>
        <parent link="conveyor_link_1" />
        <child link="box_1" />
        <axis xyz="1 0 0" />
        <limit effort="1000" lower="0" upper="1.4" velocity="5" />
    </joint>

    <joint name="box_conveyor_joint_1_2" type="prismatic">
        <origin xyz="${box_length/2+1.5} ${box_width/2} ${box_height/2}" rpy="0.0 0.0 0.0"/>
        <parent link="conveyor_link_1" />
        <child link="box_1_2" />
        <axis xyz="1 0 0" />
        <limit effort="1000" lower="0" upper="1.4" velocity="5" />
    </joint>
    <joint name="box_conveyor_joint_1_3" type="prismatic">
