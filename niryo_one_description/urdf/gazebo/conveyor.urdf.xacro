            <inertia ixx="${(conveyor_mass / 12) * (conveyor_width * conveyor_width + conveyor_height * conveyor_height) }" ixy="0.0" ixz="0.0" iyy="${(conveyor_mass / 12) * (conveyor_length * conveyor_length + conveyor_height * conveyor_height) }" iyz="0.0" izz="${(conveyor_mass / 12) * (conveyor_length * conveyor_length + conveyor_width * conveyor_width) }"/>
        </inertial>
    </link>
    
    <gazebo reference="conveyor_link_2">
        <material>Gazebo/FlatBlack</material>
        <mu1>1000.0</mu1>
        <mu2>1000.0</mu2>
    </gazebo>

    <link name="box_1">
        <inertial>
            <origin xyz="0 0 0" /> 
            <mass value="1" />
            <inertia  ixx="1" ixy="0.0"  ixz="0.0"  iyy="1"  iyz="0.0"  izz="1" />
        </inertial>
        <visual>
            <meta>
                <layer>1</layer>
            </meta>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size="${box_length} ${box_width} ${box_height}" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size="${box_length} ${box_width} ${box_height}" />
            </geometry>
            <surface>
                <friction>
                    <ode>
                        <mu>0.1</mu>
                        <mu2>0.1</mu2>
                    </ode>
                </friction>
            </surface>
        </collision>
    </link>
    <gazebo reference="box_1">
        <material>Gazebo/WoodPallet</material>
        <mu1>1000.0</mu1>
        <mu2>1000.0</mu2>
    </gazebo>

