    <joint name="conveyor_joint" type="fixed">
        <origin xyz="${conveyor_length-conveyor_width/2} ${-conveyor_width/2} 0" rpy="0.0 0.0 -1.57"/>
        <parent link="conveyor_link_1" />
        <child link="conveyor_link_2" />
        <axis xyz="0 1 0" />
        
        <!--<dynamics damping="100.0" />-->
    </joint>
    
